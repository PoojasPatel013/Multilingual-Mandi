# AI Legal Aid System Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
DEBUG=false
APP_NAME="AI Legal Aid System"

# Voice Interface Settings
DEFAULT_LANGUAGE=en
SPEECH_TIMEOUT=30

# Google Cloud Settings (for Speech-to-Text and Text-to-Speech)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
GOOGLE_CLOUD_PROJECT=your-project-id

# Database Settings
DATABASE_URL=postgresql://user:password@localhost:5432/ai_legal_aid
REDIS_URL=redis://localhost:6379/0

# Security Settings
ENCRYPTION_KEY=your-32-character-encryption-key-here
SECRET_KEY=your-secret-key-for-sessions

# Session Settings
SESSION_TIMEOUT=1800
MAX_CONVERSATION_TURNS=50

# Legal Aid Organization Data
ORGANIZATION_DATA_URL=https://api.example.com/legal-aid-orgs
ORGANIZATION_UPDATE_INTERVAL=3600

# Compliance Settings
DISCLAIMER_LANGUAGE_DIR=/path/to/disclaimer/translations
AUDIT_LOG_RETENTION_DAYS=365

# Performance Settings
MAX_CONCURRENT_SESSIONS=100
RESPONSE_TIMEOUT=10

# Development Settings
PYTEST_TIMEOUT=30
HYPOTHESIS_MAX_EXAMPLES=100